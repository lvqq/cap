{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Disable node/pnpm version update in engines",
      "matchPackageNames": ["node", "pnpm"],
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "description": "Disable auto update dependencies in create-cap",
      "matchPaths": ["packages/create-cap/**"],
      "enabled": false
    }
  ]
}
